<div class="container">

  <div id="page-header">
    <h2 id="page-title">{{ page.title }}</h2> 
  </div>

  {{ page.content }}

  {% form 'contact' %}
  
    {% if form.posted_successfully? %}
      <p class="alert alert-success">Thanks for contacting us! We'll get back to you as soon as possible.</p>
    {% endif %}

    {% if form.errors %}
    <p class="alert alert-error">
      <ul class="error-list">
      {% for field in form.errors %}
        <li>{{ field }} - {{ form.errors.messages[field] }}</li>
      {% endfor %}
      </ul>
    </p>
    {% endif %} 
    
    <ul id="contact-form">
      <li class="clearfix type-text">
        <label for="name">Name</label>
        <input type="text" id="name" name="contact[name]" />
      </li> 
      <li class="clearfix type-text">
        <label for="email">Email</label>
        <input type="email" id="email" class="email" name="contact[email]" />
      </li>   
      <li class="clearfix type-textarea">
        <label for="message">Message</label>
        <textarea id="message" name="contact[body]"></textarea>
      </li>
      <li class="clearfix type-submit">
        <input type="submit" class="submit btn btn-success" value="Send" />
      </li>
    </ul>
  {% endform %}

</div><!-- /#container -->